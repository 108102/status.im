.article-header-dev-tools
  max-width: 1200px
  height: 390px
  margin: 0 auto
  padding: 70px 0 20px
  display: flex
  justify-content: space-between
  background-image: url(../img/header_bg.svg)
  background-repeat: no-repeat
  background-position-x: 90%
  background-size: 22%
  h1
    font-family: font-title
    font-weight: bold
    line-height: 40px
    font-size: 32px
    text-decoration: none
    color: #000
    transition: 0.2s
  @media (max-width: 1199px)
    height: 470px
  @media (max-width: 991px)
    padding: 30px 0 20px
    height: 440px
    background-image: none
  @media (max-width: 767px)
    height: 700px
  @media (max-width: 459px)
    height: 730px
  @media (max-width: 391px)
    height: 790px

.dev-tools-intro
  width: 50%
  p
    color: #939BA1
  @media (max-width: 767px)
    width: 80%

.dev-tools-link-wrap
  width: 100%
  max-width: 1200px
  position: absolute;
  top: 280px;
  @media (max-width: 1199px)
    top: 250px
  @media (max-width: 991px)
    top: 220px
  @media (max-width: 767px)
    top: 190px
  @media (max-width: 459px)
    top: 220px
  @media (max-width: 391px)
    top: 270px

.dev-tools-link
  background: #FFFFFF
  box-shadow: 0px 2px 4px rgba(43, 59, 71, 0.124066)
  border-radius: 8px
  width: 31%
  float: left
  padding: 18px 16px
  margin: 0 24px 24px 0
  &:last-child
    margin-right: 0px
  h3
    font-weight: bold
    line-height: 24px
    font-size: 16px
    color: #4360DF
  p
    line-height: 24px
    font-size: 16px
  a
    text-decoration: none
    color: #939BA1
    img
      position: relative
      left: 24px
  @media (max-width: 1199px)
    width: 40%
    padding: 12px
  @media (max-width: 767px)
    width: 55%
  @media (max-width: 459px)
    width: 70%