.container-footer
  max-width: 1240px
  margin: 0 auto
  padding: 0 20px
  display: flex
  flex-direction: column
  .footer-wrap
    display: flex
    flex-wrap: wrap;
    h3
      margin-bottom: 50px
      width: 100%
      @media screen and (max-width: break-sm)
        margin-bottom: 30px
    .ecosystem-footer-wrap 
      flex-direction: row
      flex-wrap: wrap
      display: flex
      max-width: calc(33.333333% + 50px)
      @media screen and (max-width: break-xl)
        max-width: calc(50% + 50px)
      @media screen and (max-width: break-lg)
        max-width: 100%;
        margin-bottom: 50px;
      @media screen and (max-width: break-sm)
        margin-bottom: 30px
      .ecosystem-footer
        width: calc(50% - 25px)
        margin-bottom: 30px
        &:nth-of-type(2n)
          margin-left: auto
        h4
          line-height: normal
          font-size: 20px
          margin-bottom: 10px
          font-family: 'GT Walsheim'
          a
            color: #FFFFFF
            font-weight: bold
            text-decoration: none
            &:hover
              opacity: .7
        p
          line-height: 20px;
          font-size: 14px;
          color: #FFFFFF;
          opacity: 0.4;
    .company
      max-width: 16.666667%
      margin-left: auto
      margin-right: 100px
      @media screen and (max-width: break-lg)
        margin-left: 0
        max-width: calc(50% - 25px)
        width: 100%
        margin-right: auto
      @media screen and (max-width: break-sm)
        max-width: 100%
      a
        line-height: 24px;
        font-size: 16px;
        text-decoration: none
        color: #FFFFFF;
    .social-links
      max-width: 25%
      @media screen and (max-width: break-lg)
        max-width: calc(50% - 25px)
        width: 100%
      @media screen and (max-width: break-sm)
        max-width: 100%
        margin-top: 30px;
      a
        line-height: 24px;
        font-size: 16px;
        text-decoration: none
        color: #FFFFFF;
      .chat-footer
        margin-bottom: 25px
        a
          display: inline-block;
          font-size: 14px;
          text-transform: uppercase;
          letter-spacing: 1px;
          padding: 10px 32px 9px;
          font-weight: 500;
          line-height: normal;
          color: #fff;
          text-align: center;
          box-shadow: 0px 2px 4px rgba(43,59,71,0.124);
          transition: all 0.3s ease-in-out;
          background: #3C3F4D;
          box-shadow: 0px 2px 4px rgba(43, 59, 71, 0.124066);
          border-radius: 20px;
          &:hover
            opacity: .7
  .footer-info
    display: flex
    flex-direction: column
    align-items: center
    text-align: center
    margin-top: 30px
    p
      line-height: 20px
      font-size: 14px
      text-align: center
      color: #FFFFFF
      opacity: 0.4
      margin-top: 5px
  .features
    display: flex
    list-style-type: none
    margin: 16px 0 0 0
    padding: 0
    justify-content: center
    flex-wrap: wrap
    max-width: 100%
    li
      margin-right: 20px
      flex: 1
      padding: 0 30px 15px 30px
      display: flex
      flex-direction: column
      align-items: center
      text-align: center
      border-radius: 16px
      @media screen and (max-width: break-md)
        flex: auto
        width: 100%
        margin: 0 0 20px
      &:last-child
        margin-right: 0
        @media screen and (max-width: break-md)
          margin: 0
      h4
        margin: 25px 0 8px 0
        font-weight: bold
        color: #ffffff
      p
        font-weight: normal
        line-height: 24px
        font-size: 16px
        text-align: center
        margin: 0
        color: #ffffff;
        opacity: 0.4;
  .footer-menu
    border-top: 1px solid rgba(255,255,255,0.1)
    display: flex
    align-items: center;
    justify-content: center;
    padding: 30px 0;
    flex-wrap: wrap
    a
      font-size: 14px;
      color: #FFFFFF;
      text-decoration: none;
      margin: 0 13px 13px 13px;
      &:hover
        opacity: .7
      
footer ul{
  list-style-type: none;
  margin: 0;
  padding: 0;
}

footer ul li{
  margin-bottom: 24px;
}

footer ul li a:hover{
  opacity: .6;
  color: #fff;
}

footer ul.community li a{
  position: relative;
  padding-left: 48px;
}

footer ul.community li a:before,
footer ul.community li a:after{
  content: '';
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: #FFFFFF;
  opacity: 0.1;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

footer ul.community li a:after{
  opacity: 1;
  background-color: transparent;
  background-position: center;
  background-repeat: no-repeat;
}

footer ul.community li a.footer-facebook:after{
  background-image: url(../img/icon_fb2.svg);
}

footer ul.community li a.footer-twitter:after{
  background-image: url(../img/icon_tw2.svg);
}

footer ul.community li a.footer-riot:after{
  background-image: url(../img/icon_ri.svg);
}

footer ul.community li a.footer-github:after{
  background-image: url(../img/icon_gh2.svg);
}

footer ul.community li a.footer-reddit:after{
  background-image: url(../img/icon_rd2.svg);
}

footer ul.community li a.footer-youtube:after{
  background-image: url(../img/icon_yt.svg);
}