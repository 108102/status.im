.about-wrapper 
  height: 905px
  @media (max-width: 880px)
      height: 750px
  @media (max-width: 767px)
      height: 685px
  @media (max-width: 459px)
      height: 485px
  @media (max-width: 391px)
      height: 585px

#content-inner-about
    display: flex
    width: 100%

.article-container-about
    max-width: 800px
    width: 100%
    margin: 40px auto
    display: block

.about-intro
  width: 100%
  text-align: center
  margin: 0 auto
  h1
    font-family: font-title
    font-weight: bold
    line-height: 40px
    font-size: 32px
    text-decoration: none
    color: #000
    margin-bottom: 16px
  p
    color: #939BA1
    margin-bottom: 28px
  @media (max-width: 767px)
    width: 80%

.about-screen
    display: flex
    float: left
    width: 100%
    align-items: center
    justify-content: center
    @media (max-width: 880px)
        img
            width: 90%
    @media (max-width: 459px)
        img
            display: none