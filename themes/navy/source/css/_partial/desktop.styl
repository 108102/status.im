.article-container-desktop
    max-width: 800px
    width: 100%
    margin: 40px auto
    display: block
    float: right

.article-header-desktop
  max-width: 1200px
  margin: 0 auto
  height: 725px
  @media (max-width: 767px)
    height: 250px
  @media (max-width: 459px)
    height: 300px

.desktop-intro
  width: 100%
  text-align: center
  margin: 0 auto
  h1
    font-family: font-title
    font-weight: bold
    line-height: 40px
    font-size: 32px
    text-decoration: none
    color: #000
    margin-bottom: 16px
  p
    color: #939BA1
    margin-bottom: 28px
  @media (max-width: 767px)
    width: 80%

.desktop-buttons
    margin-bottom: 28px
    display: block
    p
        text-align: center
        max-width: 800px
        margin: 0 auto
    a
        padding: 0 10%
        line-height: 24px
        font-size: 16px
        color: #4360DF
        text-decoration: none
        &:first-child
            padding: 0 10% 0 0
        &:last-child
            padding: 0 0 0 10%
    @media (max-width: 880px)
        display: none

.desktop-buttons-mobile
    display: none
    text-align: center
    p
        padding-bottom: 12px
        max-width: 800px
        margin: 0 auto
    a
        padding: 0 10%
        line-height: 24px
        font-size: 16px
        color: #4360DF
        text-decoration: none
    @media (max-width: 880px)
        display: block

.os-img
    margin-right:14px

.os-arrow
    margin-left: 7px

.desktop-screen
    display: flex
    width: 100%
    align-items: center
    justify-content: center
    @media (max-width: 767px)
        display: none
    
.desktop-content
    h2
        margin-top: 32px