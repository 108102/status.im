.article-header-wip
  max-width: 1200px
  margin: 0 auto
  padding: 50px 0 20px
  display: flex
  justify-content: space-between
  background-image: url(../img/header_bg.svg)
  background-repeat: no-repeat
  background-position-x: 90%
  background-size: 18%
  flex-direction: column
  h1
    font-family: font-title
    font-weight: bold
    line-height: 40px
    font-size: 32px
    text-decoration: none
    color: #000
    transition: 0.2s
  ul
    display: flex
    flex-wrap: wrap
    margin-bottom: -18px
    margin-top: 24px
    overflow: auto;
    @media screen and (max-width: break-xl)
      flex-wrap: nowrap
      width: calc(100% + 40px);
      margin-left: -20px;
      padding: 0 20px;
      &:after
        content: ''
        min-width: 24px
        height: 24px
        display: flex
    li
      width: calc(33.33% - 16px)
      background: #fff
      box-shadow: 0px 2px 4px rgba(43, 59, 71, 0.124066)
      border-radius: 8px
      margin-right: 24px
      margin-bottom: 24px
      padding: 24px
      position: relative
      display: flex
      align-items: center
      transition: all 0.3s ease-in-out
      &:nth-child(3n)
        margin-right: 0
        @media screen and (max-width: break-xl)
          margin-right: 24px
      &:last-child
        @media screen and (max-width: break-xl)
          margin-right: 0
      &:hover
        background: #f3f5ff;
        img
          transform: translateX(3px)
      @media screen and (max-width: break-xl)
        width: 270px
        max-width: calc(100% - 30px)
        flex: none
      .inner
        padding: 0;
        width: 100%;
        h3
          font-weight: bold;
          line-height: 24px;
          font-size: 16px;
          color: #4360DF;
        p
          line-height: 24px;
          font-size: 16px;
          color: #939BA1;
      a
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
      img
        transition: all 0.3s ease-in-out

.wip
  display: none
  padding: 20px
  @media mq-tablet
    flex: 0 0 50%
  @media mq-normal
    flex: 0 0 50%
  &.on
    display: block
    width: 32%;
    float: left;
    @media (max-width: 767px)
      width: 100%

.wip-name
  font-family: font-title
  font-weight: bold
  color: color-link
  font-size: 20px
  text-decoration: none
  line-height: 1
  display: block
  &:hover
    color: color-link-hover

.wip-desc
  line-height: line-height
  margin: 1em 0

.wip-tag-list
  clearfix()
  line-height: 1.3

.wip-tag
  color: color-gray
  font-size: 0.9em
  text-decoration: none
  float: left
  margin-right: 10px
  &:hover
    color: color-link-hover
  &:before
    content: "#"

.wip-screenshot
  margin-bottom: 15px
  position: relative
  padding-top: (10 / 16 * 100)% // 16:10 ratio
  height: 0
  overflow: hidden

.wip-screenshot-img
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  transition: opacity 0.3s
  &.lazyload
  &.lazyloading
    opacity: 0
  &.lazyloaded
    opacity: 1

.wip-preview-link
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(0, 0, 0, 0.7)
  color: #fff
  text-align: center
  opacity: 0
  transition: 0.15s
  &:hover
    opacity: 1
    .fa
      opacity: 1
      transform: scale(1)
  .fa
    position: absolute
    top: 0
    left: 0
    bottom: 0
    right: 0
    margin: auto
    font-size: 50px
    width: @font-size
    height: @font-size
    opacity: 0
    transform: scale(6)
    transition: 0.2s
    transition-delay: 0.15s
