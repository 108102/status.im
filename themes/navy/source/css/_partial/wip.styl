.article-header-wip
  max-width: 1200px
  height: 390px
  margin: 0 auto
  padding: 70px 0 20px
  display: flex
  justify-content: space-between
  background-image: url(../img/header_bg.svg)
  background-repeat: no-repeat
  background-position-x: 90%
  background-size: 22%
  h1
    font-family: font-title
    font-weight: bold
    line-height: 40px
    font-size: 32px
    text-decoration: none
    color: #000
    transition: 0.2s
  @media (max-width: 1199px)
    height: 470px
  @media (max-width: 991px)
    padding: 30px 0 20px
    height: 440px
    background-image: none
  @media (max-width: 767px)
    height: 700px
  @media (max-width: 459px)
    height: 730px
  @media (max-width: 391px)
    height: 790px

.wip-intro
  width: 50%
  p
    color: #939BA1
    max-width: 550px;
  @media (max-width: 767px)
    width: 80%

.wip-link-wrap
  width: 100%
  max-width: 1200px
  position: absolute;
  top: 280px;
  @media (max-width: 1199px)
    top: 250px
  @media (max-width: 991px)
    top: 220px
  @media (max-width: 767px)
    top: 190px
  @media (max-width: 459px)
    top: 220px
  @media (max-width: 391px)
    top: 270px

.wip-link
  background: #FFFFFF
  box-shadow: 0px 2px 4px rgba(43, 59, 71, 0.124066)
  border-radius: 8px
  width: 31%
  float: left
  padding: 18px 16px
  margin: 0 24px 24px 0
  &:last-child
    margin-right: 0px
  h3
    font-weight: bold
    line-height: 24px
    font-size: 16px
    color: #4360DF
  p
    line-height: 24px
    font-size: 16px
  a
    text-decoration: none
    color: #939BA1
    img
      position: relative
      left: 24px
  @media (max-width: 1199px)
    width: 40%
    padding: 12px
  @media (max-width: 767px)
    width: 55%
  @media (max-width: 459px)
    width: 70%

.wip
  display: none
  padding: 20px
  @media mq-tablet
    flex: 0 0 50%
  @media mq-normal
    flex: 0 0 50%
  &.on
    display: block
    width: 32%;
    float: left;

.wip-name
  font-family: font-title
  font-weight: bold
  color: color-link
  font-size: 20px
  text-decoration: none
  line-height: 1
  display: block
  &:hover
    color: color-link-hover

.wip-desc
  line-height: line-height
  margin: 1em 0

.wip-tag-list
  clearfix()
  line-height: 1.3

.wip-tag
  color: color-gray
  font-size: 0.9em
  text-decoration: none
  float: left
  margin-right: 10px
  &:hover
    color: color-link-hover
  &:before
    content: "#"

.wip-screenshot
  margin-bottom: 15px
  position: relative
  padding-top: (10 / 16 * 100)% // 16:10 ratio
  height: 0
  overflow: hidden

.wip-screenshot-img
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  transition: opacity 0.3s
  &.lazyload
  &.lazyloading
    opacity: 0
  &.lazyloaded
    opacity: 1

.wip-preview-link
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(0, 0, 0, 0.7)
  color: #fff
  text-align: center
  opacity: 0
  transition: 0.15s
  &:hover
    opacity: 1
    .fa
      opacity: 1
      transform: scale(1)
  .fa
    position: absolute
    top: 0
    left: 0
    bottom: 0
    right: 0
    margin: auto
    font-size: 50px
    width: @font-size
    height: @font-size
    opacity: 0
    transform: scale(6)
    transition: 0.2s
    transition-delay: 0.15s
